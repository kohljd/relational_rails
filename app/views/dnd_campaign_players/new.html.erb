<h1>New <%=@dnd_campaign.name%> Player Form</h1>
<%= form_with url: "/dnd_campaigns/#{@dnd_campaign.id}/players", method: :post, data: {turbo: false}, local: true do |form|%>
  <b><%=form.label :name%>:</b>
  <%=form.text_field :name%><br><br>
  <b><%=form.label :character_name, "Character Name"%>:</b>
  <%=form.text_field :character_name%><br><br>
  <b><%=form.label :sessions_missed, "Sessions Missed"%>:</b>
  <%=form.number_field :sessions_missed%><br><br>
  <b><%=form.label :game_master, "Game Master"%>:</b>
  <%=form.select(:game_master, %w[select true false])%><br><br>
  <b><%=form.label :active_player, "Active Player"%>:</b>
  <%=form.select(:active_player, %w[select true false])%><br><br>
  <%=form.submit "Create Player"%>
<%end%>